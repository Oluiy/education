# API Gateway Configuration Template
# Copy this file to .env and configure your settings

# Gateway Server Configuration
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Service URLs (adjust for your deployment)
AUTH_SERVICE_URL=http://localhost:8001
CONTENT_SERVICE_URL=http://localhost:8002
FILE_STORAGE_SERVICE_URL=http://localhost:8003
SYNC_MESSAGING_SERVICE_URL=http://localhost:8004
ASSISTANT_SERVICE_URL=http://localhost:8005
ADMIN_SERVICE_URL=http://localhost:8006
NOTIFICATION_SERVICE_URL=http://localhost:8007

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Timeouts
REQUEST_TIMEOUT=30
CONNECTION_TIMEOUT=5

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Monitoring
PROMETHEUS_METRICS_ENABLED=true
LOG_LEVEL=INFO
DEBUG=true

# Security
MAX_REQUEST_SIZE=10485760  # 10MB
API_KEY_HEADER=X-API-Key
