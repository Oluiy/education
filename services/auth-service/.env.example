# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Application Settings
SECRET_KEY=your-very-secure-secret-key-change-in-production
REFRESH_SECRET_KEY=your-refresh-token-secret-key
ALGORITHM=HS256

# Database Configuration
DATABASE_URL=postgresql://edunerve_user:password@localhost:5432/edunerve_auth
# Alternative for development:
# DATABASE_URL=sqlite:///./edunerve_auth.db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@edunerve.com

# Service URLs
API_GATEWAY_URL=http://localhost:8000
NOTIFICATION_SERVICE_URL=http://localhost:8003
CONTENT_SERVICE_URL=http://localhost:8002
FILE_STORAGE_SERVICE_URL=http://localhost:8004

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
LOGIN_RATE_LIMIT=5
REGISTER_RATE_LIMIT=3
PASSWORD_RESET_RATE_LIMIT=3

# File Upload Settings
UPLOAD_DIR=/tmp/uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Logging
LOG_LEVEL=INFO

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
SESSION_TIMEOUT_HOURS=24
MAX_ACTIVE_SESSIONS=5

# Password Policy
MIN_PASSWORD_LENGTH=8
MAX_PASSWORD_LENGTH=128
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SPECIAL_CHARS=true
PASSWORD_HISTORY_COUNT=5

# Token Expiration
ACCESS_TOKEN_EXPIRE_HOURS=1
REFRESH_TOKEN_EXPIRE_DAYS=30

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_TIMEOUT=30

# Development
AUTO_RELOAD=true
SHOW_DOCS=true
