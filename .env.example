# EduNerve Environment Configuration
# Copy this file to .env and configure your settings

# Database Configuration
DATABASE_URL=postgresql://edunerve:edunerve2024@localhost:5432/edunerve

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# API Gateway Configuration
API_GATEWAY_URL=http://localhost:8000

# Service URLs (when running individually)
AUTH_SERVICE_URL=http://localhost:8001
CONTENT_SERVICE_URL=http://localhost:8002
ASSISTANT_SERVICE_URL=http://localhost:8003
ADMIN_SERVICE_URL=http://localhost:8004
SYNC_SERVICE_URL=http://localhost:8005
FILE_SERVICE_URL=http://localhost:8006
NOTIFICATION_SERVICE_URL=http://localhost:8007

# External API Keys
OPENAI_API_KEY=your-openai-api-key
WHATSAPP_API_KEY=your-whatsapp-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# File Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10MB

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Frontend Configuration
NEXT_PUBLIC_API_GATEWAY_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=EduNerve
NEXT_PUBLIC_APP_VERSION=1.0.0

# Development Settings
DEBUG=true
LOG_LEVEL=INFO
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1
