# ==============================================================================
# EduNerve Platform - Environment Variables Template
# Copy this file to .env and update with your actual values
# ==============================================================================

# ==========================
# Database Configuration
# ==========================
POSTGRES_USER=edunerve
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_DB=edunerve
DATABASE_URL=postgresql://edunerve:your_secure_database_password_here@localhost:5432/edunerve

# ==========================
# Redis Configuration
# ==========================
REDIS_URL=redis://localhost:6379/0

# ==========================
# JWT Authentication
# ==========================
JWT_SECRET=your-super-secret-jwt-key-generate-a-secure-one
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# ==========================
# API Gateway Configuration
# ==========================
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000

# ==========================
# Service URLs (Development)
# ==========================
AUTH_SERVICE_URL=http://localhost:8001
CONTENT_SERVICE_URL=http://localhost:8002
ASSISTANT_SERVICE_URL=http://localhost:8003
ADMIN_SERVICE_URL=http://localhost:8004
SYNC_SERVICE_URL=http://localhost:8005
FILE_SERVICE_URL=http://localhost:8006
NOTIFICATION_SERVICE_URL=http://localhost:8007

# ==========================
# Third-Party API Keys
# ==========================
# OpenAI for AI features
OPENAI_API_KEY=sk-your-openai-api-key-here

# WhatsApp/SMS Integration (Termii)
TERMII_API_KEY=your-termii-api-key-here
WHATSAPP_API_KEY=your-whatsapp-api-key-here

# Twilio for SMS/Voice
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here

# Firebase for Push Notifications
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# ==========================
# Email Configuration
# ==========================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@edunerve.com

# ==========================
# Security Configuration
# ==========================
API_KEYS=your-api-key-1,your-api-key-2
ENCRYPTION_KEY=your-32-character-encryption-key-here

# ==========================
# Rate Limiting
# ==========================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ==========================
# CORS Configuration
# ==========================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ==========================
# File Storage
# ==========================
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# ==========================
# Frontend Configuration
# ==========================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ==========================
# Environment Settings
# ==========================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ==========================
# Feature Flags
# ==========================
ENABLE_AI_FEATURES=true
ENABLE_WHATSAPP_INTEGRATION=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# ==========================
# Production Settings (Uncomment for production)
# ==========================
# ENVIRONMENT=production
# DEBUG=false
# DATABASE_URL=postgresql://user:password@your-production-db:5432/edunerve
# REDIS_URL=redis://your-production-redis:6379/0
# CORS_ORIGINS=https://yourdomain.com