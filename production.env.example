# ========================================
# EDUNERVE PRODUCTION ENVIRONMENT CONFIG
# ========================================

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://edunerve_prod:secure_password@your-db-host:5432/edunerve_prod
POSTGRES_USER=edunerve_prod
POSTGRES_PASSWORD=very_secure_password_here
POSTGRES_DB=edunerve_prod

# Redis Configuration
REDIS_URL=redis://your-redis-host:6379/0
REDIS_PASSWORD=your_redis_password

# JWT Security (Generate unique keys!)
JWT_SECRET=prod-jwt-secret-key-64-chars-minimum-change-this-immediately
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Service URLs (Update for production)
AUTH_SERVICE_URL=https://auth.edunerve.com
CONTENT_SERVICE_URL=https://content.edunerve.com
ASSISTANT_SERVICE_URL=https://assistant.edunerve.com
ADMIN_SERVICE_URL=https://admin.edunerve.com
SYNC_SERVICE_URL=https://sync.edunerve.com
FILE_SERVICE_URL=https://files.edunerve.com
NOTIFICATION_SERVICE_URL=https://notifications.edunerve.com

# API Keys (Production keys)
OPENAI_API_KEY=sk-prod-your-actual-openai-key
TERMII_API_KEY=your_production_termii_api_key
TERMII_SENDER_ID=EduNerve
TERMII_WHATSAPP_SENDER_ID=your_whatsapp_sender_id

# Twilio Configuration (Alternative SMS/WhatsApp)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=noreply@edunerve.com
SMTP_PASSWORD=your_app_specific_password
SMTP_USE_TLS=true

# File Storage (Cloudinary or S3)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# AWS S3 (Alternative to Cloudinary)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=edunerve-files

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# CORS (Production domains)
CORS_ORIGINS=https://app.edunerve.com,https://admin.edunerve.com,https://your-frontend-domain.vercel.app

# Production Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# File Upload Limits
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.edunerve.com
NEXT_PUBLIC_WS_URL=wss://api.edunerve.com

# Monitoring
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
